{
  "name": "10000",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "watch:ts": "wrangler dev src/index.tsx --port 3000 --live-reload",
    "watch:css": "tailwindcss -i ./src/presentation/style.css -o ./assets/static/style.css --watch",
    "dev": "conc --handle-input --default-input-target 1 \"npm:watch*\"",
    "build": "tailwindcss -i ./src/presentation/style.css -o ./assets/static/style.css --minify",
    "predeploy": "bun run build",
    "deploy": "wrangler deploy --minify src/index.tsx",
    "check-lint": "biome lint src",
    "check-format": "biome format src",
    "test": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@cloudflare/workers-types": "^4.20240129.0",
    "@types/bun": "latest",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.1",
    "vitest": "^1.2.2",
    "wrangler": "3.25.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.1.11",
    "@types/uuid": "^9.0.8",
    "hono": "^3.12.8",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
